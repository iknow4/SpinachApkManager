<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:background="@drawable/mainscreen_bg" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <LinearLayout 
            android:gravity="center_vertical" 
            android:orientation="horizontal" 
            android:id="@id/app_manager_app" 
            android:layout_width="fill_parent" 
            android:layout_height="match_parent"
            android:background="@drawable/title_bar_bg">
            <Button 
                android:id="@id/first_button" 
                android:layout_width="70.0dip" 
                android:layout_height="match_parent" 
                style="@style/btn_green" />
            <Button android:id="@id/second_button" 
                android:layout_width="70.0dip" 
                android:layout_height="match_parent" 
                style="@style/btn_green" />
            <ImageView
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20.0dip"
                 android:src="@drawable/applogo"
                />
            <TextView
                android:visibility="gone"  
                android:textSize="16.0sp" 
                android:textColor="@color/royalblue" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/select_all_text" />
            <CheckBox
                android:visibility="gone"  
                android:id="@id/btn_do_select_all" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:button="@drawable/selector_checkbox" />
    </LinearLayout>  
    <TextView 
        android:visibility="gone" 
        android:id="@id/show_detail_counter" 
        style="@style/activity_divider" />
    <ListView
        android:id="@id/list" 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dip" 
        android:listSelector="@drawable/list_line_pressed" 
        android:layout_weight="1.0" 
        style="@style/listview" />
    <ImageView
        android:id="@+id/message" 
        android:layout_gravity="center" 
        android:layout_marginTop="200.0dip"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
     	 android:visibility="gone" 
        android:src="@drawable/icon_message"
        />  
    <TextView 
        android:textSize="18.0dip" 
        android:textColor="@color/grey" 
        android:gravity="center" 
        android:id="@id/textViewEmpty" 
		android:visibility="gone" 
        android:layout_width="fill_parent" 
        android:layout_height="40.0dip" 
        android:layout_weight="1.0" />
    <TextView 
        android:id ="@+id/big_divider"
        android:background="@color/big_divider" 
        android:layout_width="fill_parent" 
        android:layout_height="1.0dip" />
    
    </LinearLayout>
</LinearLayout>